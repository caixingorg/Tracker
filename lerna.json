{
  "version": "1.0.0",
  "npmClient": "npm",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "**/*.md",
        "**/*.test.js",
        "**/__tests__/**"
      ]
    },
    "bootstrap": {
      "hoist": true
    }
  }
}
